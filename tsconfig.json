{
  "exclude": [
    "node_modules",
    "build",
    "./resources/react",
    "public"
  ],
  "include": ["./global.d.ts"],
  "extends": "./tsconfig.adonis.json",
  "compilerOptions": {
    "outDir": "build",
    "baseUrl": "/",
    "rootDir": "./",
    "sourceMap": true,
    "paths": {
      "App/*": [
        "./app/*"
      ],
      "Contracts/*": [
        "./contracts/*"
      ]
    },
    "types": [
      "@adonisjs/core",
      "@adonisjs/session",
      "@adonisjs/view"
    ]
  }
}
